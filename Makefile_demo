LD = ld
OS = Linux
DESTDIR =
INSTALL = install
CPPFLAGS = -g0 -O3 -Wall -Wextra
LDFLAGS =
VLC_PLUGIN_CFLAGS := $(shell pkg-config --cflags vlc-plugin)
VLC_PLUGIN_LIBS := $(shell pkg-config --libs vlc-plugin)

plugindir := $(shell pkg-config vlc-plugin --variable=pluginsdir)

override CPPFLAGS += -std=c++11
override CPPFLAGS += -DPIC -I. -Isrc
override CPPFLAGS += -fPIC

override CPPFLAGS += -DMODULE_STRING=\"demo_video_filter\"
override CPPFLAGS += $(VLC_PLUGIN_CFLAGS)
override LDFLAGS += $(VLC_PLUGIN_LIBS)



ifeq ($(OS),Linux)
  EXT := so
else ifeq ($(OS),Windows)
  EXT := dll
else ifeq ($(OS),macOS)
  EXT := dylib
else
  $(error Unknown OS specified, please set OS to either Linux, Windows or macOS)
endif

TARGETS = libdemo_video_filter_plugin.$(EXT)

all: libdemo_video_filter_plugin.$(EXT)

install: all
	mkdir -p -- $(DESTDIR)$(plugindir)/demo_video_filter
	$(INSTALL) --mode 0755 libdemo_video_filter_plugin.$(EXT) $(DESTDIR)$(plugindir)/video_filter

install-strip:
	$(MAKE) install INSTALL="$(INSTALL) -s"

uninstall:
	rm -f $(DESTDIR)$(plugindir)/video_filter/libdemo_video_filter_plugin.$(EXT)

clean:
	rm -f -- libdemo_video_filter_plugin.$(EXT) demo_video_filter.o

mostlyclean: clean

SOURCES = demo_video_filter.cpp

$(SOURCES:%.cpp=%.o): %: demo_video_filter.cpp

libdemo_video_filter_plugin.$(EXT): $(SOURCES:%.cpp=%.o)
	$(CC) -shared -o $@ $^ $(LDFLAGS)

.PHONY: all install install-strip uninstall clean mostlyclean
